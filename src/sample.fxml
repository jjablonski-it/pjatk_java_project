<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="750.0" minWidth="500.0" minHeight="750.0" xmlns="http://javafx.com/javafx/10.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <children>
                <GridPane fx:id="grid" minHeight="75.0" minWidth="75.0" prefWidth="1000.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="75.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="NEVER"/>
                    </rowConstraints>
                </GridPane>
                <AnchorPane fx:id="score" prefHeight="157.0" prefWidth="750.0">
                    <children>
                        <HBox alignment="CENTER" layoutX="15.0" layoutY="362.0" prefHeight="96.0" prefWidth="221.0"
                              spacing="15.0"/>
                        <Label fx:id="info" alignment="CENTER" layoutX="15.0" layoutY="129.0" prefHeight="25.0"
                               prefWidth="221.0" text="Score" textAlignment="CENTER">
                            <font>
                                <Font name="Impact" size="20.0"/>
                            </font>
                        </Label>
                        <Label fx:id="time" alignment="CENTER" layoutX="15.0" layoutY="77.0" prefHeight="25.0"
                               prefWidth="221.0" text="Time: " textAlignment="CENTER">
                            <font>
                                <Font name="Impact" size="20.0"/>
                            </font>
                        </Label>
                        <VBox alignment="CENTER" layoutX="5.0" layoutY="250.0" prefHeight="146.0" prefWidth="242.0"
                              spacing="5.0">
                            <children>
                                <Button fx:id="mode_easy" mnemonicParsing="false" prefHeight="80.0" prefWidth="200.0"
                                        text="Easy" textFill="#3b903e">
                                    <font>
                                        <Font name="Impact" size="18.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="mode_medium" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false" prefHeight="80.0" prefWidth="200.0" text="Medium"
                                        textFill="#c39407">
                                    <font>
                                        <Font name="Impact" size="18.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="mode_hard" mnemonicParsing="false" prefHeight="80.0" prefWidth="200.0"
                                        text="Hard" textFill="#b50303">
                                    <font>
                                        <Font name="Impact" size="18.0"/>
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</VBox>
